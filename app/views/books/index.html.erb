<h1>Books</h1>

    <table>
        <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan = "3"></th>
            </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
            <tr>
              <td><%= book.title %></td>
              <td>&emsp;<%= book.body %></td>
              <td>&emsp;<%= link_to "Show", book_path(book) %></td>
              <td>&emsp;<%= link_to "Edit", edit_book_path(book)%></td>
              <td>&emsp;<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure？" %></td>

            </tr>
        </tbody>
        <% end %>

    </table>

<h1>New book</h1>
<!-- 入力エラー部分 -->
